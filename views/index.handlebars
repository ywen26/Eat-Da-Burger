<img class="picture" src="/assets/img/hb2.jpeg" />

<h1>Eat Da burgers!</h1>

<div class="all-list">
    <div>
        <h2>On Menu:</h2>
        <div class="new-add">
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </div>   
    </div>

    <div>
        <h2>Devoured List:</h2>
        <div class="devoured">
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>


<form class="submit-form">
    <div class="submit-area">
        <label for="bg">Burger Name:</label>
        <input type="text" id="bg" name="name">
    </div>

    <button id="submit-button" type="submit">Submit</button>
</form>