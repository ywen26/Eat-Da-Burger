<img class="picture" src="/assets/img/hb2.jpeg" />

<h1>Eat Da burgers!</h1>

{{!-- Area of all burgers lists --}}
<div class="all-list">
    {{!-- The block of menu list --}}
    <div>
        <h2>On Menu:</h2>
        <div class="new-add">
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </div>   
    </div>

    {{!-- The block of devoured list --}}
    <div>
        <h2>Devoured List:</h2>
        <div class="devoured">
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/devoured-block }}
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

{{!-- The block for entering new burgers --}}
<form class="submit-form">
    <div class="submit-area">
        <p for="bg">Enter a burger you want to eat:</p>
        <input type="text" id="bg" name="name">
    </div>

    <button id="submit-button" type="submit">Submit</button>
</form>